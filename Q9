	programa { //Q9

		funcao inicio() {
		// Declaração das variáveis
		real renda_mensal, valor_emprestimo, valor_prestacao, taxa_prestacao, 

		// Leitura da renda mensal
		escreva("Digite a renda mensal: R$ ")
		leia(renda_mensal)

		// Leitura do valor do empréstimo
		escreva("Digite o valor do empréstimo: R$ ")
		leia(valor_emprestimo)

		// Leitura do número de prestações
		escreva("Digite o número de prestações: ")
		leia(taxa_prestacoes)

		// Cálculo da taxa de prestação
		taxa_prestacao = 30 / 100

		// Cálculo do valor da prestação
		valor_prestacao = valor_emprestimo / taxa_prestacoes

		// Verificação se o empréstimo pode ser concedido
		se (valor_emprestimo <= renda_mensal * 10)  (valor_prestacao <= renda_mensal * taxa_prestacao) 
 		   escreva("Empréstimo pode ser concedido!")
		
		senao 
   		 escreva("Empréstimo não pode ser concedido.")
			 }

   		
	}

}
