	programa { //R5

		funcao inicio() {
		// Declaraçao das variáveis
		cadeia operacao
		inteiro a, b, resultado = 0

		escreva("Digite a operaçao (+, -, *, /): ")
		leia(operacao)

		escreva("Digite o valor de A: ")
		leia(a)

		escreva("Digite o valor de B: ")
		leia(b)

		// Cálculo do resultado
		se (operacao == "+") {
		    resultado = a + b
		}
		senao se (operacao == "-") {
 		   resultado = a - b
		}
		 se (operacao == "*") {
 		   resultado = a * b
		 }
		senao se (operacao == "/") {
 		   resultado = a / b
		}

		// Impressao do resultado
		escreva("O resultado da operaçao é: ", resultado)
		
   }
}
